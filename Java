// FunÃ§Ã£o para carregar os usuÃ¡rios da API
async function carregarUsuarios() {
  const resultDiv = document.getElementById('result');
  resultDiv.innerHTML = 'ğŸ”„ Carregando dados...';

  try {
    const response = await fetch('https://jsonplaceholder.typicode.com/users');
    
    if (!response.ok) {
      throw new Error(`Erro HTTP! Status: ${response.status}`);
    }

    const data = await response.json();

    // Limpa o conteÃºdo anterior
    resultDiv.innerHTML = '';

    // Exibe cada usuÃ¡rio dinamicamente
    data.forEach(user => {
      const userDiv = document.createElement('div');
      userDiv.classList.add('user-card');
      userDiv.innerHTML = `
        <strong>${user.name}</strong><br>
        âœ‰ï¸ ${user.email}<br>
        ğŸŒ ${user.website}
      `;
      resultDiv.appendChild(userDiv);
    });

  } catch (error) {
    console.error('Erro ao buscar dados:', error);
    resultDiv.innerHTML = 'âŒ Erro ao carregar os dados da API.';
  }
}

// Adiciona evento ao botÃ£o de atualizaÃ§Ã£o
document.getElementById('refresh').addEventListener('click', carregarUsuarios);

// Carrega os dados assim que a pÃ¡gina abre
carregarUsuarios();
